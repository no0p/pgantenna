<h4>Plot Displays</h4>
<br/>

<table class="table table-striped table-hover config-table">

  <tbody>
		<% @plots.each do |p| %>
			<tr>
			  <td>
			    <%= p.title %>
			  </td>
			
			  <td>
			    <div class="action_links">
					  <%= link_to 'Edit', edit_plot_path(p) %>&nbsp;
					  <%= link_to 'Delete',  delete_plot_path(p.id),  method: :delete, data: { confirm: 'Are you sure?' } %>
					</div>
			  </td>
			</tr>
		<% end %>
	</tbody>
</table>

<br/>

<div class="main_action_row">
  <%= link_to '+ Add new plot', new_plot_path, :class => 'edit_link' %> 
  &nbsp;&nbsp;&nbsp;
  <%= link_to 'Reset Defaults',  reset_plots_path, class: 'edit_link last_link', method: :delete, data: { confirm: 'Are you sure?  This will delete all plots and restore to default plots.' } %>
</div>
